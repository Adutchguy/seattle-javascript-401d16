{
  "rules": {
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "comma-dangle": ["error", "always-multiline"],
    "no-console": "off",
    "no-unused-vars": "off",
    "indent": [ "error", 2 ],
    "semi": ["error", "always"]
  },
  "plugins": [ "react" ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "module": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "browser": true
  },
  "globals": {
    "__API_URI__": false,
    "__TITLE__": false,
    "__DEBUG__": false
  },
  "extends": "eslint:recommended"
}
